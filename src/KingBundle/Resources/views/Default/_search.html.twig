    <script>
      var map;

      function initialize() {

        var mapOptions = {
          zoom: 12,
          center: new google.maps.LatLng(-34.397, 150.644),
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };


        map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);


	//Adding icons start here by S@int-Cyr
        
        var iconBase = 'https://maps.google.com/mapfiles/kml/shapes/';
        var icons = {
        {% for interest in categoryInstances %}
            {{ interest.id }}: {
            icon: '{{ asset('images/eco.jpg') }}'
          },
        {% endfor %}
         
        };

        function addMarker(feature) {
          var marker = new google.maps.Marker({
            position: feature.position,
            icon: icons[feature.type].icon,
            map: map
          });
        }

        var features = [
        {% for interest in categoryInstances %}
        {
            position: new google.maps.LatLng(5.55, -0.23),
            type: '{{ interest.id }}'
          },
        {% endfor %}
          
        ];

        for (var i = 0, feature; feature = features[i]; i++) {
          addMarker(feature);
        }
      

        //Current location start here
        GeoMarker = new GeolocationMarker(map);
        GeoMarker.setCircleOptions({fillColor: '#808080'});

        google.maps.event.addListenerOnce(GeoMarker, 'position_changed', function() {
          
	  //alert(JSON.stringify(this.getPosition()));
          var response = JSON.parse(JSON.stringify(this.getPosition()));
          //alert(response.lng);
          //alert(response.lat);
          map.setCenter(this.getPosition());
          
          //map.fitBounds(this.getBounds());
         /* $.post('http://localhost/VTALLY/web/app_dev.php/api/fronts', {"lat":5.5, "long":-0.2}, function(data) {
              $('#result').html(data);    
